<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body class="container">
    <h1>
        URL shortner
    </h1>
    <form class="my-4 form-inline" action="/shortUrls" method="POST">
        <label for="fullUrl" class="sr-only">
            Enter full URL
        </label>
        <input required placeholder="URL" class="form-control mr-2 col" type="url" name="fullUrl" id="fullUrl">
        <button class="btn btn-success" type="submit">Submit</button>
    </form>
    <table class="table table-striped table-responsive col">
        <thead>
            <tr>
                <th>Full URL</th>
                <th>Short URL</th>
                <th>Clicks</th>
            </tr>
        </thead>
        <tbody>
            <% shortUrls.forEach(shortUrl => { %> 
            <tr>
                <td><a href="<%= shortUrl.full %> "><%= shortUrl.full %></a></td>
                <td><a href="<%= shortUrl.short %> "><%= shortUrl.short %></a></td>
                <td><%= shortUrl.clicks %> </td>
            </tr>
            <% }) %> 
        </tbody>
    </table>
</body>
</html>